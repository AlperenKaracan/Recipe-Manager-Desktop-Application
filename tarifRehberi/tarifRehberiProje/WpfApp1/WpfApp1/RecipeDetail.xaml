<Window x:Class="TarifRehberi.RecipeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tarif Detayları" Height="500" Width="481">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tarif Adı:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Name="TarifAdiTextBlock"/>

            <TextBlock Text="Kategori:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Name="KategoriTextBlock"/>

            <TextBlock Text="Hazırlama Süresi:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Name="HazirlamaSuresiTextBlock"/>

            <TextBlock Text="Talimatlar:" FontWeight="Bold" Margin="0,5,0,0"/>
            <TextBlock Name="TalimatlarTextBlock" TextWrapping="Wrap"/>

            <TextBlock Text="Malzemeler:" FontWeight="Bold" Margin="0,5,0,0"/>
            <ListBox Name="MalzemeListesi" Height="200">
            </ListBox>
        </StackPanel>
    </Grid>
</Window>
