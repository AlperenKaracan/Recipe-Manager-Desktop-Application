<Window x:Class="TarifRehberi.TarifEkleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tarif Ekle" Height="600" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Tarif Adı:" Margin="0,5,0,0"/>
            <TextBox Name="TarifAdiTextBox" Width="450"/>

            <TextBlock Text="Kategori:" Margin="0,5,0,0"/>
            <ComboBox Name="KategoriComboBox" Width="450">

            </ComboBox>

            <TextBlock Text="Hazırlama Süresi (dakika):" Margin="0,5,0,0"/>
            <TextBox Name="HazirlamaSuresiTextBox" Width="450"/>

            <TextBlock Text="Talimatlar:" Margin="0,5,0,0"/>
            <TextBox Name="TalimatlarTextBox" Width="450" Height="100" AcceptsReturn="True" TextWrapping="Wrap"/>

            <TextBlock Text="Malzemeler:" Margin="0,5,0,0"/>
            <ListBox Name="MalzemeListesi" Width="450" Height="150">

            </ListBox>
            <Button Content="Malzeme Ekle" Width="136" Click="OnMalzemeEkleClick" Margin="5,5,4,4" Height="32" Background="#FF4CAF50" FontSize="14"/>
            <Button Content="Tarifi Ekle" Width="136" Click="OnTarifEkleClick" Margin="4,4,5,5" Height="29" Background="#FF4CAF50" FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
